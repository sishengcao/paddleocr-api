# =====================================================
# 应用配置
# =====================================================
APP_NAME=PaddleOCR API
APP_VERSION=2.0.0
DEBUG=false
LOG_LEVEL=INFO

# =====================================================
# 服务器配置
# =====================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# =====================================================
# 数据库配置
# =====================================================
# Docker 部署使用服务名: mysql
# 本地部署使用: localhost 或 IP 地址
DB_HOST=mysql
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_secure_password_here
DB_NAME=paddleocr_api
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =====================================================
# Redis 配置
# =====================================================
# Docker 部署使用服务名: redis
# 本地部署使用: localhost 或 IP 地址
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =====================================================
# Celery 配置（批量扫描功能需要）
# =====================================================
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# =====================================================
# OCR 配置
# =====================================================
# 语言: ch=中文, en=英文
OCR_LANG=ch
# 是否使用 GPU（需安装 paddlepaddle-gpu）
OCR_USE_GPU=false
# 是否使用角度分类
OCR_USE_ANGLE_CLS=true

# =====================================================
# 任务配置
# =====================================================
TASK_DEFAULT_PRIORITY=5
TASK_MAX_RETRIES=3
TASK_RETRY_DELAY=60
TASK_LOCK_TTL=3600
TASK_DUPLICATE_DETECTION=true

# =====================================================
# 导出配置
# =====================================================
EXPORT_TTL_HOURS=24

# =====================================================
# API 配置
# =====================================================
API_PREFIX=/api/ocr
MAX_UPLOAD_SIZE=104857600
MAX_BATCH_FILES=10
